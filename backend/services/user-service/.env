# User Service Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=user-service

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rabhan_user
DATABASE_USER=postgres
DATABASE_PASSWORD=12345
DATABASE_SSL=false

# Connection Pool Settings
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=15000
DATABASE_CONNECTION_TIMEOUT=2000

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:3003,http://localhost:4173
CORS_CREDENTIALS=true

# Cache Settings (Redis)
REDIS_URL=redis://localhost:6379/1
CACHE_TTL=3600

# API Settings
API_PREFIX=/api/user
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security Settings
JWT_SECRET=rabhan_jwt_secret_key_for_development_only_change_in_production
BCRYPT_ROUNDS=12

# SAMA Compliance
SAMA_AUDIT_ENABLED=true
SAMA_COMPLIANCE_MODE=development

# External Services
AUTH_SERVICE_URL=http://localhost:3001/api/auth
DOCUMENT_SERVICE_URL=http://localhost:3003/api/document

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9092