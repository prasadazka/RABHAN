# User Service Configuration
NODE_ENV=development
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0

# Server Configuration
PORT=3002
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rabhan_user_db
DATABASE_USER=rabhan_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL=true
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50
DATABASE_IDLE_TIMEOUT=15000
DATABASE_CONNECTION_TIMEOUT=2000

# Redis Configuration (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=1
REDIS_KEY_PREFIX=rabhan:user:
REDIS_TTL=300

# Auth Service Integration
AUTH_SERVICE_URL=http://localhost:3001
AUTH_SERVICE_TIMEOUT=5000

# Security Configuration
JWT_PUBLIC_KEY_PATH=/secrets/jwt-public.pem
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_char_iv_here

# SAMA Compliance
SAMA_AUDIT_ENABLED=true
SAMA_REPORTING_ENABLED=true
SAMA_COMPLIANCE_LEVEL=4

# Performance Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
RESPONSE_COMPRESSION=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9102
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Saudi Arabia Specific
DEFAULT_TIMEZONE=Asia/Riyadh
DEFAULT_LOCALE=ar-SA
DEFAULT_CURRENCY=SAR