# RABHAN Marketplace Service - Environment Configuration
# Copy this file to .env and configure your values

# Application Configuration
NODE_ENV=development
PORT=3007
SERVICE_NAME=marketplace-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rabhan_marketplace
DB_USER=marketplace_service
DB_PASSWORD=your_secure_database_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_minimum_32_characters
JWT_REFRESH_EXPIRE=7d

# SAMA Compliance & Security
SAMA_AUDIT_ENABLED=true
SAMA_ENCRYPTION_KEY=your_encryption_key_for_sama_compliance_32_chars
SAMA_REPORTING_ENDPOINT=

# Security Configuration
CORS_ORIGIN=http://localhost:3000,https://rabhan.sa
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000
ENCRYPTION_ALGORITHM=aes-256-gcm

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true

# Performance Configuration
CACHE_TTL=300
QUERY_TIMEOUT=5000
CONNECTION_TIMEOUT=3000

# KSA Specific Configuration
TIMEZONE=Asia/Riyadh
LOCALE=ar-SA
CURRENCY=SAR

# Service Integration URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
CONTRACTOR_SERVICE_URL=http://localhost:3004
DOCUMENT_SERVICE_URL=http://localhost:3003

# AWS Configuration (optional)
AWS_REGION=me-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Configuration (optional)
S3_BUCKET=
S3_ENDPOINT=