# RABHAN Auth Service Environment Configuration

# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:12345@localhost:5432/rabhan_auth

# JWT Configuration
JWT_SECRET=rabhan_jwt_secret_key_for_development_only_change_in_production
JWT_REFRESH_SECRET=rabhan_jwt_refresh_secret_key_for_development_only_change_in_production

# Twilio Configuration (for SMS verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_saudi_phone_number

# SendGrid Configuration (optional in development)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@rabhan.sa

# Redis Configuration
REDIS_URL=redis://localhost:6379

# SAMA Compliance
SAMA_AUDIT_ENABLED=true
SAMA_COMPLIANCE_MODE=development

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
MAX_LOGIN_ATTEMPTS=20
ACCOUNT_LOCK_DURATION_MS=300000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development Settings
FORCE_OTP_IN_DEV=false

# Microservice URLs
CONTRACTOR_SERVICE_URL=http://127.0.0.1:3004