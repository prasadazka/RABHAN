{
  "name": "@rabhan/auth-service",
  "version": "1.0.0",
  "description": "RABHAN Authentication Service - SAMA-compliant auth service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:e2e": "jest --testPathPattern=e2e --coverage",
    "test:sama": "jest --testPathPattern=sama --coverage",
    "test:security": "jest --testPathPattern=security --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false --runInBand",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "node-pg-migrate",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "docker:build": "docker build -t rabhan/auth-service .",
    "docker:run": "docker run -p 3001:3001 rabhan/auth-service",
    "docker:compose": "docker-compose up -d",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "keywords": [
    "auth",
    "jwt",
    "sama",
    "bnpl"
  ],
  "author": "RABHAN Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "twilio": "^5.7.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
