# SMTP (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev@rabhan.sa
SMTP_PASS=dev_smtp_password_placeholder

# SAMA Compliance
SAMA_AUDIT_ENABLED=true
