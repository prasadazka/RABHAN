# Auth Service - Local Development Configuration
NODE_ENV=development
PORT=3001
SERVICE_NAME=auth-service

# Database - Connecting to Docker PostgreSQL
DATABASE_URL=postgresql://auth_user:auth_secure_pass_2024@localhost:5432/rabhan_auth?sslmode=disable

# Redis - Connecting to Docker Redis
REDIS_URL=redis://:rabhan_redis_secure_password_2024@localhost:6379/0

# JWT Configuration
JWT_SECRET=auth_jwt_secret_change_in_production_2024
JWT_REFRESH_SECRET=auth_refresh_secret_change_in_production_2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# Twilio (Development)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=dev_twilio_auth_token_placeholder
