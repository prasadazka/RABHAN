# Document Service Configuration
NODE_ENV=development
PORT=3003
SERVICE_NAME=document-service

# Database Configuration
DATABASE_URL=postgresql://postgres:12345@localhost:5432/rabhan_document
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rabhan_document
DATABASE_USER=postgres
DATABASE_PASSWORD=12345
DATABASE_SSL=false

# Connection Pool Settings
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=15000
DATABASE_CONNECTION_TIMEOUT=2000

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:3002

# Cache Settings (Redis)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/2
CACHE_TTL=3600

# API Settings
API_PREFIX=/api/document
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png
MAX_FILES_PER_UPLOAD=5

# Storage Configuration (Local for development)
STORAGE_TYPE=local
STORAGE_PROVIDER=local
STORAGE_PATH=./storage/documents
STORAGE_BUCKET=documents
MINIO_ENABLED=false
STORAGE_TYPE=local

# MinIO Configuration (for production)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=rabhan-documents

# Encryption Settings
ENCRYPTION_ALGORITHM=aes-256-cbc
ENCRYPTION_MASTER_KEY=eaabc83a0a287b525e157ea0410a2f49c434158bd024db8b825703fc91f68481

# Security Settings
JWT_SECRET=rabhan_jwt_secret_key_for_development_only_change_in_production
BCRYPT_ROUNDS=12

# SAMA Compliance
SAMA_AUDIT_ENABLED=true
SAMA_COMPLIANCE_MODE=development
DOCUMENT_RETENTION_YEARS=7

# External Services
AUTH_SERVICE_URL=http://localhost:3001/api/auth
USER_SERVICE_URL=http://localhost:3002/api/user

# Virus Scanning (disabled for development)
VIRUS_SCAN_ENABLED=false
VIRUS_SCAN_PROVIDER=clamav
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# OCR Settings (disabled for development)
OCR_ENABLED=false
OCR_PROVIDER=tesseract
OCR_LANGUAGE=ara+eng

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9093

# Document Processing
ENABLE_THUMBNAIL_GENERATION=true
THUMBNAIL_SIZE=300
IMAGE_QUALITY=85