# Server Configuration
NODE_ENV=development
PORT=3004
SERVICE_NAME=solar-calculator-service

# Database Configuration
DATABASE_URL=postgresql://rabhan_user:password@localhost:5432/rabhan_solar
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_IDLE_TIMEOUT=15000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=300

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# SAMA Compliance
SAMA_API_KEY=your-sama-api-key
SAMA_REPORT_ENDPOINT=https://api.sama.gov.sa/v1/reports
AUDIT_LOG_RETENTION_DAYS=2555

# Service Configuration
ENABLE_SWAGGER=true
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# Solar Calculation Constants
DEFAULT_SOLAR_EFFICIENCY=0.158
KWP_TO_KWH_FACTOR=158.3
RESIDENTIAL_MIN_BILL=1080
COMMERCIAL_MIN_BILL=1200
ELECTRICITY_RATE=0.3
MAX_BNPL_INSTALLMENTS=60
SYSTEM_PRICE_PER_KWP=2200