# RABHAN Production Environment Configuration
# Copy this to .env and fill in your actual values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_minimum_256_bits
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_change_this_in_production_minimum_256_bits

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_saudi_phone_number_with_country_code

# SendGrid Configuration (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@rabhan.com

# Frontend Configuration
VITE_API_BASE_URL=http://your-aws-instance-ip
VITE_APP_ENV=production

# AWS Instance Configuration
AWS_INSTANCE_IP=your.aws.instance.ip
DOMAIN=rabhan.com
ADMIN_DOMAIN=admin.rabhan.com

# Security
SAMA_AUDIT_ENABLED=true
SAMA_COMPLIANCE_MODE=production

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true